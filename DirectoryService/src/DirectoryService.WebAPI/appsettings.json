{
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.Seq"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name" :  "Console"},
      { 
        "Name": "Seq",
        "Args": { "ServerUrl": "http://seq:5341"}
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "ConnectionStrings": {
    "Postgres": ""
  },
  "CleanupDepartmentsOptions": {
    "InactiveDays": 30,
    "IntervalHours": 24,
    "DailyTimeUtc": "12:00"
  },
  "AllowedHosts": "*" 
}
